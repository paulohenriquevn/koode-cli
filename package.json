{
	"name": "koode-cli",
	"version": "0.0.0",
	"license": "MIT",
	"bin": "dist/cli.js",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "prettier --check . && vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"ajv": "^8.17.1",
		"boxen": "^8.0.1",
		"cli-boxes": "^4.0.1",
		"combined-stream": "^1.0.8",
		"commander": "^14.0.1",
		"cross-spawn": "^7.0.6",
		"globby": "^15.0.0",
		"ignore": "^7.0.5",
		"ink": "^4.1.0",
		"is-online": "^12.0.1",
		"lodash-es": "^4.17.21",
		"lru-cache": "^11.2.2",
		"meow": "^11.0.0",
		"minimatch": "^10.0.3",
		"openai": "^6.3.0",
		"ora": "^9.0.0",
		"react": "^18.2.0",
		"react-reconciler": "^0.29.2",
		"shell-quote": "^1.8.3",
		"spawn-rx": "^5.1.2",
		"which": "^5.0.0",
		"winston": "^3.18.3",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/combined-stream": "^1.0.6",
		"@types/cross-spawn": "^6.0.6",
		"@types/lodash-es": "^4.17.12",
		"@types/react": "^18.0.32",
		"@types/react-reconciler": "^0.32.2",
		"@types/shell-quote": "^1.7.5",
		"@typescript-eslint/eslint-plugin": "^8.46.1",
		"@typescript-eslint/parser": "^8.46.1",
		"@vdemedes/prettier-config": "^2.0.1",
		"@vitest/ui": "^3.2.4",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"eslint": "^8.57.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"jsdom": "^27.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3",
		"vitest": "^3.2.4",
		"xo": "^0.59.0"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"semicolon": true,
		"ignores": [
			"docs/**",
			"node_modules/**",
			"dist/**",
			"*.md",
			"*.json",
			"*.js"
		],
		"rules": {
			"react/prop-types": "off",
			"unicorn/expiring-todo-comments": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
